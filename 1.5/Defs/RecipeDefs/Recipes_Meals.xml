<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <RecipeDef Name="VCE_CookHauteMealBase" Abstract="True">
    <fixedIngredientFilter>
      <categories>
        <li>FoodRaw</li>
		 <li>VCE_Condiments</li>
      </categories>
      <specialFiltersToDisallow>
        <li>AllowPlantFood</li>
      </specialFiltersToDisallow>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <categories>
        <li>FoodRaw</li>
		<li>VCE_Condiments</li>
      </categories>
      <disallowedCategories>
        <li>EggsFertilized</li>
      </disallowedCategories>
      <disallowedThingDefs>
        <li>Meat_Human</li>
        <li>Meat_Megaspider</li>
        <li>InsectJelly</li>
		 <li MayRequire="Ludeon.RimWorld.Anomaly">Meat_Twisted</li>
      </disallowedThingDefs>
    </defaultIngredientFilter>
    <workSkill>Cooking</workSkill>
  </RecipeDef>


  <RecipeDef ParentName="VCE_CookHauteMealBase">
    <defName>VCE_CookMealHaute</defName>
    <label>cook haute meal</label>
    <description>Compose an opulent symphony of flavor and form, where the finest ingredients and masterful technique unite in a transcendent culinary masterpiece.</description>
    <jobString>Cooking haute meal.</jobString>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <ingredientValueGetterClass>VanillaCookingExpanded.IngredientValueGetter_NutritionWithExtraIngredient</ingredientValueGetterClass>
	<recipeUsers>
		<li>VCE_ElectricHauteSection</li>	
			
	</recipeUsers>
	
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>MeatRaw</li>
            <li>AnimalProductRaw</li>
          </categories>
        </filter>
        <count>0.5</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>PlantFoodRaw</li>
          </categories>
        </filter>
        <count>0.5</count>
      </li>
	   <li>
        <filter>
          <categories>
            <li>PlantFoodRaw</li>
          </categories>
        </filter>
        <count>0.5</count>
      </li>
	  <li>
        <filter>
          <categories>
            <li>VCE_Condiments</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
	   <li>
        <filter>
          <categories>
            <li>VCE_Condiments</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
      <VCE_MealHaute>1</VCE_MealHaute>
    </products>
    <skillRequirements>
      <Cooking>10</Cooking>
    </skillRequirements>
  </RecipeDef>
  
  

 

 

</Defs>
